@model KUET_SGIPC.Models.BlogTable

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container" style="margin-top:50px">

    <h2>Add Blog</h2>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
      
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ShortDes, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                       <textarea id="ShortDes" name="ShortDes" rows="10" style="overflow: scroll; width: 300px; height: 100px;"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LongDes, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea id="LongDes" name="LongDes" rows="20" style="overflow: scroll; width: 300px; height: 300px;"></textarea>
                    </div>
                   
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                      <input type="date" name="Date" id="Date"/>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                       <input type="time" name="Time" id="Time" />
                    </div>
                </div>

                <div class="form-group" style="margin-top:50px">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Upload" class="btn btn-default" />
                        @ViewBag.Blog_Upload
                    </div>
                </div>
            </div>
        }

    </div>

</div>

