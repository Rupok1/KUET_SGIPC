@model IEnumerable<KUET_SGIPC.Models.NoticeTbl>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top:50px">
    <p>
        @Html.ActionLink("Create New", "AddMarqueeNotice")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditMarqueeNotice", new { id = item.Id }) |
                    @Html.ActionLink("Details", "GetMarqueeNotice", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteMarquee", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>

